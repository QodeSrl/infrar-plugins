# Terraform Variables for {{ .ProjectName }}
# Provider: {{ .Provider }}
# Auto-generated by Infrar from template

# Project configuration
variable "project_id" {
  description = "GCP project ID"
  type        = string
  {{- if .Metadata.project_id }}
  default     = {{ .Metadata.project_id | tfstring }}
  {{- end }}
}

variable "region" {
  description = "GCP region for deployment"
  type        = string
  default     = {{ .Variables.region | default "us-central1" | tfstring }}
}

variable "project_name" {
  description = "Project name for resource naming"
  type        = string
  default     = {{ .ProjectName | tfstring }}
}

variable "environment" {
  description = "Environment name (dev, staging, production)"
  type        = string
  default     = {{ .Environment | default "production" | tfstring }}
}

# Labels (GCP-specific)
variable "labels" {
  description = "Labels to apply to resources"
  type        = map(string)
  default     = {
{{- range $key, $value := .Variables.tags }}
    {{ $key | sanitizeLabel }} = {{ $value | sanitizeLabel | tfstring }}
{{- end }}
    managed_by  = "infrar"
    environment = {{ .Environment | default "production" | sanitizeLabel | tfstring }}
  }
}
