# GCP Provider Configuration
# Auto-generated by Infrar from template

terraform {
  required_version = ">= 1.0"

  required_providers {
    google = {
      source  = "hashicorp/google"
      version = "~> 5.0"
    }
  }
}

provider "google" {
  project = var.project_id
  region  = {{ .Variables.region | default "us-central1" | tfstring }}

  {{- if .Variables.zone }}
  zone    = {{ .Variables.zone | tfstring }}
  {{- end }}

  # Credentials are provided via GOOGLE_APPLICATION_CREDENTIALS environment variable
  # This is set by the platform's credential handler
}
